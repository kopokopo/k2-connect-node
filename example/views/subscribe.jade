extends layout

block content
    br
    br
    p !{message}
    p !{statusCode}
    .container
        .title.h3 Subscribe to a webhook
        br
        form#bulkSmsForm(action="/webhook/subscribe", method="post")
            .form-group.row
                label.col-sm-2.col-form-label(for="event_type") Event Type
                .col-sm-7
                    select(name = "event_type")
                        option(value="buygoods_transaction_received") Buygoods Transaction Received 
                        option(value="b2b_transaction_received") B2b Transaction Received
                        option(value="m2m_transaction_received") M2m Transaction Received
                        option(value="buygoods_transaction_reversed") Buygoods Transaction Reversed
                        option(value="settlement_transfer_completed") Settlement Completed
                        option(value="customer_created") Customer Created
            .form-group.row
                label.col-sm-2.col-form-label(for="scope") Scope
                .col-sm-7
                    select(name = "scope")
                        option(value="company") Company
                        option(value="till") Till
            .form-group.row
                label.col-sm-2.col-form-label Scope Reference
                .col-sm-7
                    input.form-control(name="scope_ref", type='text', placeholder='Enter Scope Reference(Leave empty for company scope)' required)
                    small.form-text.text-muted
                        | Enter Scope Reference(Leave empty for company scope)
            .form-group.row
                label.col-sm-2.col-form-label(for="url") URL
                .col-sm-7
                    textarea#amount.form-control(name="url", type='text', placeholder='Enter URL' required)
                    small.form-text.text-muted
                        | Enter the webhook url
            br
            .form-group.row
                .col-sm-7
                    button.btn.btn-success(type='submit') Subscribe